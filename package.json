{
  "name": "react-tag-tracker",
  "version": "0.1.5",
  "description": "A React provider that simplifies tracking custom events and sends them to window.dataLayer, streamlining integration with GTM.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build:types": "tsc -p tsconfig.prod.json --emitDeclarationOnly",
    "build:js": "node esbuild.config.js",
    "build": "pnpm build:types && pnpm build:js",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "size": "size-limit"
  },
  "keywords": [
    "react",
    "gtm",
    "google-tag-manager",
    "dataLayer",
    "analytics",
    "events",
    "tracking",
    "custom-events",
    "typescript",
    "react-provider",
    "react-hook"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iLTW1n/react-tag-tracker.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "esbuild": "0.27.3",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "size-limit": "^12.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ]
}
